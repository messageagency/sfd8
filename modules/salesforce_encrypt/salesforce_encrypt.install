/**
 * Implements hook_uninstall to decrypt and purge our data.
 */
function salesforce_encrypt_uninstall() {
  \Drupal::service('salesforce.client')->disableEncryption();
  \Drupal::state()->delete('salesforce_encrypt.profile');
}
